{
  "author": "Manthan Mallikarjun",
  "bugs": {
    "url": "https://github.com/ludicroushq/pg-bossman/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "a pg-boss wrapper that comes with a type safe API, reasonable defaults, and a dashboard",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/cli": "^2.29.7",
    "@electric-sql/pglite": "^0.3.10",
    "@types/node": "^24.6.2",
    "@types/prismjs": "^1.26.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vvo/tzdb": "^6.186.0",
    "frunk": "^0.0.4",
    "lefthook": "^1.13.6",
    "pg-boss": "^11.0.4",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ultracite": "5.5.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "hono": "^4.9.9",
    "prismjs": "^1.30.0",
    "typed-htmx": "^0.3.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ludicroushq/pg-bossman#readme",
  "keywords": [
    "pg-boss",
    "bull-board",
    "postgres",
    "pg",
    "bull",
    "bullmq",
    "worker",
    "nodejs",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "name": "pg-bossman",
  "packageManager": "pnpm@10.0.0",
  "peerDependencies": {
    "pg-boss": "^11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludicroushq/pg-bossman.git"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  },
  "scripts": {
    "build": "f -- tsdown",
    "dev": "f -- tsdown --watch",
    "test": "f [test:*]",
    "test:vitest": "f -- vitest run",
    "test:typecheck": "f -- tsc --noEmit",
    "test:lint": "f -- ultracite fix",
    "ci:test": "f [ci:test:*]",
    "ci:test:typecheck": "f -- tsc --noEmit",
    "ci:test:lint": "f -- ultracite fix",
    "ci:test:vitest": "f -- vitest run --coverage",
    "prepublishOnly": "f [build]",
    "prepare": "f -- lefthook install",
    "release": "f [build] -- changeset publish",
    "version": "f -- changeset version && pnpm install frunk@0.0.4"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.0.3"
}
